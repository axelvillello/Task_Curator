<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TaskCurator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TaskCurator"
    Shell.FlyoutBehavior = "Flyout"
    Title = "Task Curator">

    <FlyoutItem Title="Tasks To Do">
        <ShellContent
            Title="Task Groups"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>
    <FlyoutItem Title="Task Database">
        <ShellContent
        Title="Task Database"
        ContentTemplate="{DataTemplate local:TaskDatabase}"
        Route="TaskDatabase" />
    </FlyoutItem>

</Shell>
